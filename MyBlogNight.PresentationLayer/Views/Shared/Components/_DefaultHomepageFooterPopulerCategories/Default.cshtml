@model List<MyBlogNight.DtoLayer.Dtos.ArticleDtos.CategoryWithArticleCount>

<div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
    @*Popular Categories*@
    <div class="widget">
        <h2 class="widget-title">Popüler Kategoriler</h2>
        <div class="link-widget">
            <ul>
            @foreach (var category in Model)
            {
                <li><a>@category.CategoryName <span> (@category.ArticleCount)</span></a></li>
            }
        </ul>
        </div><!-- end link-widget -->
    </div><!-- end widget -->
</div><!-- end col -->