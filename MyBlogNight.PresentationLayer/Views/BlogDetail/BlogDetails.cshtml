@model MyBlogNight.EntityLayer.Concrete.Article

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Site Metas -->
    <title>Markedia - Marketing Blog Template</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Site Icons -->
    <link rel="shortcut icon" href="~/markedia/markedia/images/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="~/markedia/markedia/images/apple-touch-icon.png">

    <!-- Design fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,700" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="~/markedia/markedia/css/bootstrap.css" rel="stylesheet">

    <!-- FontAwesome Icons core CSS -->
    <link href="~/markedia/markedia/css/font-awesome.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/markedia/markedia/style.css" rel="stylesheet">

    <!-- Animate styles for this template -->
    <link href="~/markedia/markedia/css/animate.css" rel="stylesheet">

    <!-- Responsive styles for this template -->
    <link href="~/markedia/markedia/css/responsive.css" rel="stylesheet">

    <!-- Colors for this template -->
    <link href="~/markedia/markedia/css/colors.css" rel="stylesheet">

    <!-- Version Marketing CSS for this template -->
    <link href="~/markedia/markedia/css/version/marketing.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->



</head>

<body>
    <div id="wrapper">

        <header class="market-header header">
            <div class="container-fluid">
                <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" href="marketing-index.html"><img src="~/markedia/markedia/images/version/market-logo.png" alt=""></a>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="~/markedia/markedia/marketing-index.html">Anasayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="marketing-category.html">Marketing</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="marketing-category.html">Make Money</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="marketing-blog.html">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="marketing-contact.html">Contact Us</a>
                            </li>
                        </ul>
                        <form class="form-inline">
                            <input class="form-control mr-sm-2" type="text" placeholder="Bir şey mi arıyorsun?">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Ara</button>
                        </form>
                    </div>
                </nav>
            </div><!-- end container-fluid -->
        </header><!-- end market-header -->

        <section class="section lb m3rem">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                        <div class="page-wrapper">
                            <div class="blog-title-area">
                                <ol class="breadcrumb hidden-xs-down">
                                    <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                                    <li class="breadcrumb-item"><a href="#">Blog</a></li>
                                    <li class="breadcrumb-item active">@Model.Title</li>
                                </ol>

                                <span class="color-yellow"><a href="marketing-category.html" title="">@Model.Category.CategoryName</a></span>

                                <h3>@Model.Title</h3>

                                <div class="blog-meta big-meta">
                                    <small><a href="" title="">@Model.CreatedDate</a></small><!--TARİH-->
                                    <small><a href="" title="">@Model.AppUser.Name @Model.AppUser.Surname</a></small><!--YAZARI-->
                                    <small><a href="#" title=""><i class="fa fa-eye"></i> @Model.ArticleViewCount</a></small><!--GÖRÜNTÜLENME SAYISI-->
                                </div><!-- end meta -->

                                <div class="post-sharing">
                                    <ul class="list-inline">
                                        <li><a href="#" class="fb-button btn btn-primary"><i class="fa fa-facebook"></i> <span class="down-mobile">Share on Facebook</span></a></li>
                                        <li><a href="#" class="tw-button btn btn-primary"><i class="fa fa-twitter"></i> <span class="down-mobile">Tweet on Twitter</span></a></li>
                                        <li><a href="#" class="gp-button btn btn-primary"><i class="fa fa-google-plus"></i></a></li>
                                    </ul>
                                </div><!-- end post-sharing -->
                            </div><!-- end title -->

                            <div class="blog-content">
                                <!-- end pp -->

                                <img src="@Model.CoverImageUrl" alt="" class="img-fluid img-fullwidth">

                                <div class="pp">
                                    <h3><strong>@Model.Title </strong></h3>


                                    <p>@Model.Detail</p>

                                </div><!-- end pp -->
                            </div><!-- end content -->

                            <div class="blog-title-area">
                                @await Component.InvokeAsync("_DefaultBlogDetailTagClouds")

                                <div class="post-sharing">
                                    <ul class="list-inline">
                                        <li><a href="#" class="fb-button btn btn-primary"><i class="fa fa-facebook"></i> <span class="down-mobile">Share on Facebook</span></a></li>
                                        <li><a href="#" class="tw-button btn btn-primary"><i class="fa fa-twitter"></i> <span class="down-mobile">Tweet on Twitter</span></a></li>
                                        <li><a href="#" class="gp-button btn btn-primary"><i class="fa fa-google-plus"></i></a></li>
                                    </ul>
                                </div><!-- end post-sharing -->
                            </div><!-- end title -->
                            
                            <hr class="invis1">
                           
                            <div class="custombox authorbox clearfix">
                                <h4 class="small-title">Yazar Hakkında</h4>
                                <div class="row">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                        <img src="~/markedia/markedia/upload/author.jpg" alt="" class="img-fluid rounded-circle">
                                    </div><!-- end col -->

                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                        <h4><a href="#">@Model.AppUser.Name @Model.AppUser.Surname</a></h4>
                                        <p>@Model.AppUser.AppUserDescription</p>
                                        <div class="topsocial">
                                            <a href="https://github.com/OrucTuran"target="_blank" data-toggle="tooltip" data-placement="bottom" title="Facebook"><i class="fa fa-facebook"></i></a>
                                            <a href="https://github.com/OrucTuran"target="_blank" data-toggle="tooltip" data-placement="bottom" title="Youtube"><i class="fa fa-youtube"></i></a>
                                            <a href="https://github.com/OrucTuran"target="_blank" data-toggle="tooltip" data-placement="bottom" title="Pinterest"><i class="fa fa-pinterest"></i></a>
                                            <a href="https://github.com/OrucTuran"target="_blank" data-toggle="tooltip" data-placement="bottom" title="Twitter"><i class="fa fa-twitter"></i></a>
                                            <a href="https://github.com/OrucTuran"target="_blank" data-toggle="tooltip" data-placement="bottom" title="Instagram"><i class="fa fa-instagram"></i></a>
                                            <a href="https://github.com/OrucTuran"target="_blank" data-toggle="tooltip" data-placement="bottom" title="Website"><i class="fa fa-link"></i></a>
                                        </div><!-- end social -->
                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div><!-- end author-box -->
                            

                            <hr class="invis1">
                            @await Component.InvokeAsync("_DefaultYouMayAlsoLike")

                            <hr class="invis1">

                            @await Component.InvokeAsync("_DefaultBlogDetailsComments")

                            <hr class="invis1">

                            <div class="custombox clearfix">
                                <h4 class="small-title">Bir Yorum Yapın</h4>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form class="form-wrapper">
                                            <input type="text" class="form-control" placeholder="Adınız">
                                            <input type="text" class="form-control" placeholder="Email adresiniz">
                                            <textarea class="form-control" placeholder="Yorumunuz"></textarea>
                                            <button type="submit" class="btn btn-primary">Yorum Gönder</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div><!-- end page-wrapper -->
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end container -->
        </section>

        <footer class="footer">
            <div class="container">
                <div class="row">
                    @await Component.InvokeAsync("_DefaultHomepageFooterRecentPost")

                    @await Component.InvokeAsync("_DefaultHomepageFooterPopularPosts")

                    @await Component.InvokeAsync("_DefaultHomepageFooterPopulerCategories")
                </div><!-- end row -->
                <div class="row">
                    <div class="col-md-12 text-center">
                        <br>
                        <br>
                        <div class="copyright">&copy; Markedia. Design: <a href="http://html.design">HTML Design</a>.</div>
                    </div>
                </div>
            </div><!-- end container -->
        </footer><!-- end footer -->

        <div class="dmtop">Scroll to Top</div>

    </div><!-- end wrapper -->
    <!-- Core JavaScript
    ================================================== -->
    <script src="~/markedia/markedia/js/jquery.min.js"></script>
    <script src="~/markedia/markedia/js/tether.min.js"></script>
    <script src="~/markedia/markedia/js/bootstrap.min.js"></script>
    <script src="~/markedia/markedia/js/animate.js"></script>
    <script src="~/markedia/markedia/js/custom.js"></script>

</body>
</html>